{
  "expo": {
    "name": "CESAME Agent IA",
    "slug": "cesame-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.cesame.mobile",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "Cette application a besoin d'accéder au microphone pour la dictée vocale."
      }
    },
    "android": {
      "package": "com.cesame.mobile",
      "permissions": [
        "RECORD_AUDIO"
      ]
    },
    "plugins": [
      "expo-font",
      "expo-dev-client"
    ],
    "extra": {
      "apiBaseUrl": "http://localhost:3001/api",
      "whisperServerUrl": "http://localhost:3003"
    }
  }
}
